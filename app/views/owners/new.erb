<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="owner[name]">

  <br>

  <p>Choose an existing pet:</p>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>">
      <%= pet.name %>
    </input>
    <br>
  <% end %>

  <br>

  <p>And/or create a new pet:</p>
  <label for="pet[name]">Name:</label>
  <br>
  <input type="text" name="pet[name]" />
  <br>

  <br>


  <input type="submit" value="Create Owner">
</form>
