<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <label for="">Pet:</label>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name%>"><br><br>

    <% Owner.all.each do |owner| %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>> <%= owner.name %>
    <% end %>

    <p>Enter a new owner</p>
    <input type="text" name="owner[name]" id="owner_name">>

    <input type="submit" value="Update Pet">

</form>

