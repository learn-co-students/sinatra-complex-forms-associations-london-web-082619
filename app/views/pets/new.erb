<h1>Create a new Pet</h1>

<form action="/pets" method="post">
    <label> Pet name </label><br>
    <input type="text" name="pet[name]" id="pet_name"><br>
    <br>
    <label> Choose an owner </label><br>
    <% Owner.all.each do |owner| %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"> <%= owner.name %><br> </input> 
    <% end %>
    <br>
    <label for="">Create a new owner for pet</label><br>
    <input type="text" name="owner[name]" id="owner_name">

    <input type="submit" value="Create Pet">
</form>